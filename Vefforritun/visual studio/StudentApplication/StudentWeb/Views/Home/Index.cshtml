@model IEnumerable<StudentApplication.Models.Student>
@{
    ViewBag.Title = "Home Page";
}
<title>Students List</title>
<h1>Student List</h1>
<table class="table table-hover">
    <caption>A List Of Students</caption>
    <thead>
        <tr>
            <th>Name:</th>
            <th>Email:</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Edit", new { id = item.ID })
            </td>
            <td>
                @item.Email
            </td>
		</tr>
    }
    </tbody>
</table> 